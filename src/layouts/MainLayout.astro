---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Schema from "../components/Schema.astro";

interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = "Premium tattoo studio in Perth, WA. Focused on line, form, and longevity.",
} = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | INK//RITUAL</title>
		<meta name="description" content={description} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300..700;1,300..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={`${title} | INK//RITUAL`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${base}og-image.jpg`} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={`${title} | INK//RITUAL`} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={`${base}og-image.jpg`} />

		<Schema />
		<ViewTransitions />
	</head>
	<body class="min-h-screen">
		<div class="grain-overlay"></div>
		<a
			href="#main-content"
			class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-metallic-accent focus:text-charcoal focus:px-4 focus:py-2"
		>
			Skip to content
		</a>

		<slot name="header" />

		<main id="main-content">
			<slot />
		</main>

		<slot name="footer" />
	</body>
</html>
