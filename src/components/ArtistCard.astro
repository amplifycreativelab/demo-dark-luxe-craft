---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    name: string;
    specialty: string;
    experience: string;
    image: ImageMetadata;
    slug: string;
}

const { name, specialty, experience, image, slug } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<a
    href={`${base}artists/${slug}`}
    class="group relative block overflow-hidden bg-surface aspect-[4/5] border border-divider hover:border-metallic-accent/30 transition-colors duration-700"
>
    <div
        class="absolute inset-0 bg-charcoal opacity-20 group-hover:opacity-0 transition-opacity duration-700 z-10"
    >
    </div>

    <Image
        src={image}
        alt={name}
        class="absolute inset-0 w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-105 transition-all duration-1000 ease-out"
    />

    <div
        class="absolute inset-0 bg-gradient-to-t from-charcoal via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-700 z-20"
    >
    </div>

    <div
        class="absolute bottom-0 left-0 w-full p-8 z-30 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-700"
    >
        <p
            class="text-[10px] tracking-[0.3em] uppercase text-metallic-accent mb-2"
        >
            {specialty}
        </p>
        <h3 class="text-2xl font-heading tracking-wide mb-1">{name}</h3>
        <p
            class="text-xs text-warm-grey opacity-0 group-hover:opacity-100 transition-opacity duration-1000"
        >
            {experience} Experience
        </p>
    </div>

    <div
        class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-700 z-30"
    >
        <span
            class="text-[10px] tracking-widest uppercase py-1 px-3 border border-metallic-accent/50 text-metallic-accent bg-charcoal/80"
        >
            View Portfolio
        </span>
    </div>
</a>
