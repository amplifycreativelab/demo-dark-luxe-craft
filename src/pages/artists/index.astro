---
import MainLayout from "../../layouts/MainLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InkHeading from "../../components/InkHeading.astro";
import ArtistCard from "../../components/ArtistCard.astro";
import { artists } from "../../data/artists";
---

<MainLayout title="Artists">
    <Header slot="header" />

    <section class="pt-24 pb-32 px-6 md:px-12 max-w-[1280px] mx-auto">
        <div class="max-w-3xl mb-24">
            <p
                class="text-[10px] tracking-[0.5em] uppercase text-metallic-accent mb-8"
            >
                Our Team
            </p>
            <InkHeading level={1} class="text-5xl md:text-8xl uppercase mb-8"
                >Craftsmen</InkHeading
            >
            <p class="text-warm-grey text-lg leading-relaxed">
                Each resident artist at INK//RITUAL brings a unique perspective
                and years of dedicated study to the chair. We operate with a
                shared commitment to quality and longevity.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {artists.map((artist) => <ArtistCard {...artist} />)}
        </div>
    </section>

    <Footer slot="footer" />
</MainLayout>
