---
import MainLayout from "../../layouts/MainLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InkHeading from "../../components/InkHeading.astro";
import BookingForm from "../../components/BookingForm.astro";
---

<MainLayout title="Contact">
    <Header slot="header" />

    <section class="pt-24 pb-32 px-6 md:px-12 max-w-[1280px] mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-24">
            <div>
                <p
                    class="text-[10px] tracking-[0.5em] uppercase text-metallic-accent mb-8"
                >
                    Access
                </p>
                <InkHeading
                    level={1}
                    class="text-5xl md:text-8xl uppercase mb-12"
                    >The Gateway</InkHeading
                >

                <div class="space-y-16">
                    <div>
                        <h3
                            class="text-xs uppercase tracking-[0.3em] text-ink-text mb-6"
                        >
                            Booking Process
                        </h3>
                        <p class="text-warm-grey leading-relaxed max-w-md">
                            All project start with a complimentary consultation.
                            This allows us to discuss your vision, placement,
                            and size in detail before securing a date.
                        </p>
                    </div>

                    <div>
                        <h3
                            class="text-xs uppercase tracking-[0.3em] text-ink-text mb-6"
                        >
                            Studio Info
                        </h3>
                        <div class="space-y-4 text-warm-grey">
                            <p>Tuesday — Saturday</p>
                            <p>11:00 AM — 06:00 PM</p>
                            <p class="pt-4">123 Boutique Lane, Northbridge</p>
                            <p>Perth, Western Australia</p>
                        </div>
                    </div>

                    <div class="pt-8 flex space-x-8">
                        <a
                            href="#"
                            class="text-[10px] tracking-widest uppercase text-metallic-accent hover:text-ink-text"
                            >Instagram</a
                        >
                        <a
                            href="#"
                            class="text-[10px] tracking-widest uppercase text-metallic-accent hover:text-ink-text"
                            >Email Atelier</a
                        >
                    </div>
                </div>
            </div>

            <div class="bg-surface p-12 md:p-16 border border-divider">
                <div class="mb-12">
                    <h2 class="text-2xl font-heading mb-4">
                        Request a Consultation
                    </h2>
                    <p class="text-sm text-warm-grey">
                        Average response time: 2-3 business days.
                    </p>
                </div>
                <BookingForm />
            </div>
        </div>
    </section>

    <!-- Local Trust / SEO MAP placeholder -->
    <section class="py-32 px-6 md:px-12 bg-charcoal border-t border-divider">
        <div
            class="max-w-[1280px] mx-auto flex flex-col items-center text-center"
        >
            <InkHeading class="text-3xl md:text-4xl uppercase mb-12"
                >Serving the Perth Community</InkHeading
            >
            <p class="text-warm-grey max-w-2xl mb-12 leading-relaxed">
                Located in the heart of Northbridge, we are proud to serve
                collectors from Leederville, Mount Lawley, and across Western
                Australia.
            </p>
            <div
                class="w-full h-[400px] bg-surface grayscale opacity-50 border border-divider flex items-center justify-center"
            >
                <span
                    class="text-[10px] tracking-widest uppercase text-warm-grey"
                    >Atmospheric Map Visualization</span
                >
            </div>
        </div>
    </section>

    <Footer slot="footer" />
</MainLayout>
