---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import InkHeading from "../components/InkHeading.astro";
import ArtistCard from "../components/ArtistCard.astro";
import GalleryMasonry from "../components/GalleryMasonry.astro";
import { Image } from "astro:assets";
import { artists } from "../data/artists";
import heroBg from "../assets/hero-bg.png";
import port1 from "../assets/port-1.png";

const base = import.meta.env.BASE_URL;
---

<MainLayout title="Atelier">
	<Header slot="header" />

	<!-- Hero Section -->
	<section
		class="relative min-h-[90vh] flex items-center px-6 md:px-12 overflow-hidden"
	>
		<div class="absolute inset-x-0 top-0 h-full w-full z-0">
			<Image
				src={heroBg}
				alt="INK//RITUAL Studio"
				class="w-full h-full object-cover opacity-40 grayscale"
			/>
			<div
				class="absolute inset-0 bg-gradient-to-b from-charcoal via-transparent to-charcoal"
			>
			</div>
		</div>

		<div class="relative z-10 max-w-[1280px] mx-auto w-full">
			<div class="max-w-2xl">
				<InkHeading
					level={1}
					class="text-5xl md:text-8xl mb-8 uppercase leading-[0.9]"
				>
					Dark Craft.<br />Quiet Flex.
				</InkHeading>
				<p
					class="text-warm-grey text-lg md:text-xl font-body leading-relaxed mb-12 max-w-lg"
				>
					A private tattoo atelier focused on line, form, and
					longevity. We believe in intentional work that resonates
					with the body.
				</p>
				<div
					class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-8"
				>
					<a
						href={`${base}contact`}
						class="px-12 py-5 bg-metallic-accent text-charcoal font-body text-xs uppercase tracking-[0.3em] hover:bg-ink-text transition-colors duration-500 text-center"
					>
						Book Consultation
					</a>
					<a
						href={`${base}gallery`}
						class="px-12 py-5 border border-divider text-ink-text font-body text-xs uppercase tracking-[0.3em] hover:border-metallic-accent transition-colors duration-500 text-center"
					>
						View Gallery
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Ethos Section -->
	<section class="py-32 px-6 md:px-12">
		<div
			class="max-w-[1280px] mx-auto grid grid-cols-1 md:grid-cols-2 gap-24 items-center"
		>
			<div>
				<p
					class="text-[10px] tracking-[0.5em] uppercase text-metallic-accent mb-8"
				>
					The Philosophy
				</p>
				<InkHeading class="text-4xl md:text-6xl mb-12 leading-tight">
					Longevity over noise.
				</InkHeading>
				<div class="space-y-8 text-warm-grey leading-relaxed">
					<p>
						At INK//RITUAL, we bypass the trends of the moment in
						favor of work that will stand the test of time. Every
						piece is a collaboration between artist and soul.
					</p>
					<p>
						Our studio is a sanctuary of focus. We operate by
						appointment only to ensure each client receives our
						undivided creative energy.
					</p>
				</div>
			</div>
			<div
				class="aspect-[4/5] bg-surface relative overflow-hidden group border border-divider"
			>
				<Image
					src={port1}
					alt="Studio Process"
					class="w-full h-full object-cover grayscale opacity-60 group-hover:scale-105 transition-transform duration-[2s]"
				/>
				<div class="absolute inset-0 bg-charcoal/20"></div>
			</div>
		</div>
	</section>

	<!-- Featured Artists -->
	<section class="py-32 bg-surface">
		<div class="px-6 md:px-12 max-w-[1280px] mx-auto">
			<div class="flex justify-between items-end mb-16">
				<div>
					<p
						class="text-[10px] tracking-[0.5em] uppercase text-metallic-accent mb-6"
					>
						Our Hands
					</p>
					<InkHeading class="text-4xl md:text-6xl uppercase"
						>The Residents</InkHeading
					>
				</div>
				<a
					href={`${base}artists`}
					class="hidden md:block text-[10px] tracking-widest uppercase text-warm-grey hover:text-metallic-accent transition-colors"
				>
					View All Artists &rarr;
				</a>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{artists.map((artist) => <ArtistCard {...artist} />)}
			</div>
		</div>
	</section>

	<!-- Portfolio Preview -->
	<section class="py-32 px-6 md:px-12 max-w-[1280px] mx-auto text-center">
		<p
			class="text-[10px] tracking-[0.5em] uppercase text-metallic-accent mb-6"
		>
			The Work
		</p>
		<InkHeading class="text-4xl md:text-6xl uppercase mb-16"
			>Selected Works</InkHeading
		>

		<GalleryMasonry limit={6} />

		<div class="mt-24">
			<a
				href={`${base}gallery`}
				class="px-12 py-5 border border-divider text-ink-text font-body text-xs uppercase tracking-[0.3em] hover:border-metallic-accent transition-colors duration-500"
			>
				Full Portfolio
			</a>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-32 px-6 md:px-12 border-y border-divider">
		<div class="max-w-[1280px] mx-auto text-center space-y-12">
			<InkHeading class="text-5xl md:text-8xl uppercase leading-none"
				>Ready to Begin?</InkHeading
			>
			<p class="text-warm-grey max-w-xl mx-auto text-lg leading-relaxed">
				Consultations are complimentary and required for all custom
				projects. Let's discuss your next ritual.
			</p>
			<a
				href={`${base}contact`}
				class="inline-block px-12 py-5 bg-metallic-accent text-charcoal font-body text-xs uppercase tracking-[0.3em] hover:bg-ink-text transition-colors duration-500"
			>
				Secure an Entry
			</a>
		</div>
	</section>

	<Footer slot="footer" />
</MainLayout>
