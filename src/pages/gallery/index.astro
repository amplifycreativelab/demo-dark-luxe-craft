---
import MainLayout from "../../layouts/MainLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InkHeading from "../../components/InkHeading.astro";
import GalleryMasonry from "../../components/GalleryMasonry.astro";
---

<MainLayout title="Gallery">
    <Header slot="header" />

    <section class="pt-24 pb-32 px-6 md:px-12 max-w-[1280px] mx-auto">
        <div class="max-w-3xl mb-24">
            <p
                class="text-[10px] tracking-[0.5em] uppercase text-metallic-accent mb-8"
            >
                Visual Proof
            </p>
            <InkHeading level={1} class="text-5xl md:text-8xl uppercase mb-8"
                >Selected Works</InkHeading
            >
            <p class="text-warm-grey text-lg leading-relaxed">
                Browse our archive of intentional tattooing. A collection of
                works focused on longevity, architecture, and the human form.
            </p>
        </div>

        <GalleryMasonry />
    </section>

    <Footer slot="footer" />
</MainLayout>
