---
import MainLayout from "../../layouts/MainLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InkHeading from "../../components/InkHeading.astro";
import { styles } from "../../data/styles";
import { Image } from "astro:assets";

const base = import.meta.env.BASE_URL;
---

<MainLayout title="Styles">
    <Header slot="header" />

    <section class="pt-24 pb-32 px-6 md:px-12 max-w-[1280px] mx-auto">
        <div class="max-w-3xl mb-24">
            <p
                class="text-[10px] tracking-[0.5em] uppercase text-metallic-accent mb-8"
            >
                Disciplines
            </p>
            <InkHeading level={1} class="text-5xl md:text-8xl uppercase mb-8"
                >The Craft</InkHeading
            >
            <p class="text-warm-grey text-lg leading-relaxed">
                We specialize in distinct tattoo disciplines that prioritize
                clarity and structural integrity. Understanding the craft is the
                first step in the ritual.
            </p>
        </div>

        <div class="space-y-32">
            {
                styles.map((style, index) => (
                    <div
                        class={`grid grid-cols-1 md:grid-cols-2 gap-24 items-center ${index % 2 !== 0 ? "md:flex-row-reverse" : ""}`}
                    >
                        <div class={index % 2 !== 0 ? "md:order-2" : ""}>
                            <InkHeading class="text-3xl md:text-5xl uppercase mb-8">
                                {style.name}
                            </InkHeading>
                            <p class="text-warm-grey text-lg leading-relaxed max-w-lg">
                                {style.description}
                            </p>
                        </div>
                        <div
                            class={`aspect-video bg-surface overflow-hidden border border-divider ${index % 2 !== 0 ? "md:order-1" : ""}`}
                        >
                            <Image
                                src={style.image}
                                alt={style.name}
                                class="w-full h-full object-cover grayscale opacity-60 hover:opacity-100 transition-opacity duration-1000"
                            />
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <Footer slot="footer" />
</MainLayout>
